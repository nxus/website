---
layout: default
title: Blog
---

    <!-- Main Content -->
    <div class="container" style="margin-top: 110px;">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <h1>The Nxus Blog</h1>
                <hr>
              <% site.posts.reverse().forEach(function(post) { %>
              <div class="post-preview">
                    <a href="<%= post.url %>">
                        <h2 class="post-title">
                            <%= post.title %>
                        </h2>
                    </a>
                    <p><%- post.excerpt %></p>
                    <p class="post-meta">Posted by <a href="http://www.github.com/<%= post.author %>"><%= post.author %></a> on <%= post.date %></p>
                </div>
                <hr>
              <% }) %>
            </div>
        </div>
    </div>

    <!-- Custom Theme JavaScript -->
